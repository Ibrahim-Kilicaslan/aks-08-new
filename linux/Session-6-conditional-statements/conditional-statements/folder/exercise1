read -p "Input your name: " name
read -p "Input your age: " age
read -p "Average life expectancy: " ale

if [[ $age -lt 18 ]]; then
  echo "You are a student."
  echo "At least $((18 - age)) years to become a worker."

elif [[ $age -gt 18 && $age -lt 65 ]]; then
  echo "You are a worker."
  echo "$((65 - age)) years to retire."

elif [[ $age -ge 65 ]]; then
  if (( age < ale )); then
    echo "You are retired"
    echo "$((ale - age)) years to die."
  else
    echo "Already died!!!"
  fi
fi
